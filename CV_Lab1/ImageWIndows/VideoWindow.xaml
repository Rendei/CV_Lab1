<Window x:Class="CV_Lab1.ImageWIndows.VideoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CV_Lab1.ImageWIndows"
        mc:Ignorable="d"
        Title="VideoWindow" Height="900" Width="800">
    <Grid>
        <MediaElement  Width="600" Height="300" LoadedBehavior="Manual" Name="videoPlayer" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="109,28,0,0"/>
        <Image x:Name="image" Width="600" Height="300" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="109,360,0,0"></Image>
        <StackPanel Margin="0,791,0,10">
            <Label Name="lblStatus" Content="Не воспроизводится..." HorizontalContentAlignment="Center" Margin="5" />
            <WrapPanel HorizontalAlignment="Center">
                <Button Name="btnPlay" Click="btnPlay_Click">Воспроизвести</Button>
                <Button Name="btnPause" Margin="5,0" Click="btnPause_Click">Пауза</Button>
                <Button Name="btnStop" Click="btnStop_Click">Остановить</Button>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
