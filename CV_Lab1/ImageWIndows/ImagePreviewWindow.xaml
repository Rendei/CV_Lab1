<Window x:Class="CV_Lab1.ImagePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CV_Lab1"
        mc:Ignorable="d"
        Title="ImagePreviewWindow" Height="700" Width="1000"
        ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Margin="27,55,528,31">
            <Label Content="Однородное изображение" HorizontalAlignment="Center"/>
            <Image x:Name="firstImage" Height="500" Width="400" Source="C:\Users\фвьшт\Downloads\uniformImage.png"/>
            <Button x:Name="uniformHistogramButton" Content="Показать гистограмму каналов" Click="uniformHistogramButton_Click"/>
        </StackPanel>

        <StackPanel Margin="500,55,28,-4">
            <Label Content="Неоднородное изображение" HorizontalAlignment="Center"/>
            <Image x:Name="secondImage" HorizontalAlignment="Center" Height="500" VerticalAlignment="Center" Width="400" Source="C:\Users\фвьшт\Downloads\nonuniformImage.png"/>
            <Button x:Name="nonuniformHistogramButton" Content="Показать гистограмму каналов" Click="nonuniformHistogramButton_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
